{
    "name":  "boxing-timer-desktop",
    "version":  "12.0.0",
    "main":  "main.js",
    "productName":  "Boxing Timer",
    "scripts":  {
                    "start":  "electron .",
                    "dist":  "electron-builder -w",
                    "release":  "standard-version"
                },
    "devDependencies":  {
                            "electron":  "^31.0.0",
                            "electron-builder":  "^24.13.3",
                            "standard-version":  "^9.5.0"
                        },
    "build":  {
                  "appId":  "com.yourname.boxingtimer",
                  "productName":  "Boxing Timer",
                  "asar":  true,
                  "files":  [
                                "index.html",
                                "main.js",
                                "manifest.json",
                                "service-worker.js",
                                "icon-192.png",
                                "icon-512.png",
                                "license.txt",
                                "node_modules/**"
                            ],
                  "directories":  {
                                      "buildResources":  "build"
                                  },
                  "win":  {
                              "target":  [
                                             "nsis"
                                         ],
                              "icon":  "build/icon.ico",
                              "artifactName":  "Boxing Timer Setup ${version}.${ext}"
                          },
                  "nsis":  {
                               "oneClick":  false,
                               "allowToChangeInstallationDirectory":  true,
                               "createDesktopShortcut":  true,
                               "createStartMenuShortcut":  true,
                               "shortcutName":  "Boxing Timer",
                               "menuCategory":  "Exercise\\Boxing",
                               "perMachine":  false,
                               "runAfterFinish":  true,
                               "license":  "license.txt"
                           }
              },
    "license":  "SEE LICENSE IN license.txt"
}